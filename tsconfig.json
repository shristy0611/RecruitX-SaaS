{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/db/*": ["packages/db/*"],
      "@/ai/*": ["packages/ai/*"],
      "@/ui/*": ["packages/ui/*"],
      "@/config/*": ["packages/config/*"]
    }
  },
  "exclude": ["node_modules"]
} 